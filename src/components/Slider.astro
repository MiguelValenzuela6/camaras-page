---
import NextIcon from "./icons/NextIcon.astro";
import PreviewIcon from "./icons/PreviewIcon.astro";

const images = [
    {
        image: '/Slider/1.webp',
        alt: 'image'
    },
    {
        image: '/Slider/2.webp',
        alt: 'image'
    },
    {
        image: '/Slider/2.webp',
        alt: 'image'
    },
];

---

<div class="slider">
    <div class="list">
    {
        images.map(({ image, alt }) =>(
        <div class="item">
            <img src={ image } alt={ alt }/>
        </div>
        ))
    }
        
    </div>
    <div class="buttons">
        <button id="prev"><PreviewIcon /></button>
        <button id="next"><NextIcon /></button>
    </div>
    <ul class="dots">
        <li class="active"></li>
        {
            images.slice(1, images.length ).map(() =>(
                <li></li>
            ))
        }
    </ul>
</div>

<style>
    .slider{
        border: 1px solid white;
        width: 1500px;
        max-width: 100vw;
        height: 780px;
        margin: auto;
        position: relative;
        overflow: hidden;
        border-radius: 20px;
    }
    .slider .list{
        position: absolute;
        width: max-content;
        height: 100%;
        left: 0;
        top: 0;
        display: flex;
        transition: 1s;
    }
    .slider .list img{
        width: 1500px;
        max-width: 100vw;
        height: 100%;
        object-fit: cover;
    }
    .slider .buttons{
        position: absolute;
        top: 45%;
        left: 5%;
        width: 90%;
        display: flex;
        justify-content: space-between;
    }
    .slider .buttons button{
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        width: 40px;
        height: 40px;
        border-radius: 100%;
        background-color: #fff5;
        color: #fff;
        border: none;
        font-family: monospace;
        font-weight: bold;
    }
    .slider .dots{
        position: absolute;
        bottom: 10px;
        left: 0;
        color: #fff;
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
    }
    .slider .dots li{
        cursor: pointer;
        list-style: none;
        width: 10px;
        height: 10px;
        background-color: #fff;
        margin: 10px;
        border-radius: 20px;
        transition: 0.5s;
    }
    .slider .dots li.active{
        width: 30px;
    }

/* Pantalla 1440px */
@media (max-width: 1440px) {
    .slider {
        width: 1160px;
        height: 650px;
    }

    .slider .list img {
        object-fit: cover;
    }
}

/* Pantalla 1024px */
@media (max-width: 1024px) {
    .slider {
        width: 1024px;
        height: 500px;
    }

    .slider .list img {
        object-fit: cover;
    }

    .slider .buttons button {
        width: 35px;
        height: 35px;
    }

    .slider .dots li {
        width: 8px;
        height: 8px;
        margin: 8px;
    }

    .slider .dots li.active {
        width: 25px;
    }
}

/* Pantalla 768px */
@media (max-width: 768px) {
    .slider {
        width: 768px;
        height: 400px;
        border-radius: 16px;
    }

    .slider .list img {
        object-fit: cover;
    }

    .slider .buttons button {
        width: 30px;
        height: 30px;
    }

    .slider .dots li {
        width: 7px;
        height: 7px;
        margin: 7px;
    }

    .slider .dots li.active {
        width: 20px;
    }
}

/* Pantalla 425px */
@media (max-width: 425px) {
    .slider {
        width: 425px;
        height: 250px;
        border-radius: 16px;
    }

    .slider .list img {
        object-fit: cover;
    }

    .slider .buttons button {
        width: 25px;
        height: 25px;
    }

    .slider .dots li {
        width: 6px;
        height: 6px;
        margin: 5px;
    }

    .slider .dots li.active {
        width: 15px;
    }
}

/* Pantalla 320px */
@media (max-width: 320px) {
    .slider {
        width: 320px;
        height: 200px;
        border-radius: 8px;
    }

    .slider .list img {
        object-fit: cover;
    }

    .slider .buttons button {
        width: 20px;
        height: 20px;
    }

    .slider .dots li {
        width: 5px;
        height: 5px;
        margin: 4px;
    }

    .slider .dots li.active {
        width: 12px;
    }
}

</style>

<script src="../js/slider"></script>